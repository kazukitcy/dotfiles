#!/usr/bin/env sh

SCRIPT_DIR=$(pwd)

# Install Homebrew
if [ -z "$(command -v brew)" ]; then
    echo "--- Start installing Homebrew ---"

    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

# default config directory
mkdir -p ~/.config

# Zsh
mkdir -p ~/.config/zsh
ln -fs $SCRIPT_DIR/zsh/.zshenv ~/.zshenv
ln -fs $SCRIPT_DIR/zsh/.zshrc ~/.config/zsh/.zshrc
ln -fs $SCRIPT_DIR/zsh/rc.d ~/.config/zsh/rc.d
